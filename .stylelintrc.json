{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-idiomatic-order"
  ],
  "rules": {
    "number-leading-zero": "never",
    "selector-class-pattern": "^.[a-z]([a-z0-9-]+)?(__([a-z0-9]+-?)+)?(_([a-z0-9]+-?)+){0,2}$",
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["mixin", "include"]
      }
    ]
  }
}
